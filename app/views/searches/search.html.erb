<% if @range == "User" %>
  <h2>Users serch for "<%= @word %>"</h2>
<% else %>
  <h2>Books serch for "<%= @word %>"</h2>
<% end %>

<table class='table'>
  <% if @range == "User" %>
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Introduction</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: '100x100' %></td>
          <td><%= link_to user.name, user_path(user) %></td>
          <td><%= user.introduction %></td>
        </tr>
      <% end %>
    </tbody>

  <% else %>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size: '100x100' %></td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>

</table>